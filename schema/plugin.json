{
  "title": "FlyBrainLab",
  "description": "FlyBrainLab FFBOProcessors Settings",
  "type": "object",
  "definitions": {
      "fbl-config": {
          "description": "One instance of FFBOProcessor settings",
          "properties": {
              "NAME": { 
                  "description": "Name of the processor",
                  "type": "string"
              },
              "AUTH": {
                "properties": {
                    "ssl": {
                        "type": "boolean"
                    },
                    "authentication": {
                        "type": "boolean"
                    },
                    "cert": {
                        "type": "string"
                    },
                    "key": {
                        "type": "string"
                    },
                    "chain-cert": {
                        "type": "string"
                    },
                    "ca_cert_file": {
                        "type": "string"
                    },
                    "intermediate_cert_file": {
                        "type": "string"
                    }
                },
                "required":["ssl", "authentication"],
                "type": "object"
            },
            "USER": {
                "properties": {
                    "user": {
                        "type": "string"
                    },
                    "secret": {
                        "type": "string"
                    }
                },
                "required":["user", "secret"],
                "type": "object"
            },
            "SERVER": {
                "properties": {
                    "IP": {
                        "type": "string"
                    },
                    "dataset": {
                        "title": "NA databases",
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                    },
                    "realm": {
                        "description": "Do not change",
                        "type": "string"
                    }
                },
                "required":["IP", "dataset", "realm"],
                "type": "object"
            },
            "DEBUG": {
                "properties": {
                    "debug": {
                        "type": "boolean"
                    }
                },
                "type": "object"
            }
          }
      },
      "fbl-settings": {
          "description": "All available connections for a given FlyBrainLab",
          "type": "array",
          "items": { "$ref": "#/definitions/fbl-config" }
      }
  },
  "properties": {
      "fbl-processors":{
          "title": "FFBOProcessors",
          "description": "Enumerates all available FFBOProcessors",
          "$ref": "#/definitions/fbl-settings",
          "format": "table",
          "type": "array",
          "items": { "$ref": "#/definitions/fbl-config" }
      }
  }
}