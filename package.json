{
    "private": true,
    "workspaces": ["packages/*"],
    "scripts": {
      "build": "lerna run build",
      "watch": "lerna run --parallel watch",
      "eslint": "lerna run --parallel eslint",
      "dev": "lerna run --parallel dev",
      "clean": "lerna run --parallel clean",
      "clean:node_modules": "lerna run --parallel clean:node_modules && rimraf node_modules",
      "link": "jlpm run link:setup && jlpm run link:template && jlpm run link:neu3d",
      "unlink": "jlpm run unlink:template && jlpm run unlink:neu3d && jlpm run unlink:setup",
      "unlink:setup": "lerna exec --scope @flybrainlab/fbl-template-widget --scope neu3d -- jlpm unlink",
      "unlink:template": "lerna exec --parallel --scope @flybrainlab/*-widget -- jlpm unlink \"@flybrainlab/fbl-template-widget\"",
      "unlink:neu3d": "lerna exec --scope @flybrainlab/neu3d-widget -- jlpm unlink \"neu3d\"",
      "link:setup": "lerna exec --scope @flybrainlab/fbl-template-widget --scope neu3d -- jlpm link ",
      "link:template": "lerna exec --parallel --scope @flybrainlab/*-widget jlpm link \"@flybrainlab/fbl-template-widget\" ",
      "link:neu3d": "lerna exec --scope @flybrainlab/neu3d-widget jlpm link \"neu3d\" ",
      "link:lab": "lerna exec --scope @flybrainlab/fbl-extension -- jupyter labextension link . "
    },
    "devDependencies": {
      "lerna": "^3.19.0",
      "rimraf": "^3.0.2"
    }
  }